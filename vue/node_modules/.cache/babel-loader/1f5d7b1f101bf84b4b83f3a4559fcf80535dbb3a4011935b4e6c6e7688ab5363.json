{"ast":null,"code":"import request from \"@/utils/request\";\n// import wangEditor from \"wangeditor\";\n\n// 商品管理模块接口请求统一前缀\nlet baseUrl = \"/banner/\";\nexport default {\n  data() {\n    return {\n      user: {},\n      tableData: [],\n      pageNum: 1,\n      dialogVisible: false,\n      search: {},\n      form: {},\n      total: 0,\n      goodsData: [] // 这个商品数据用来制作对话框里的下拉菜单\n    };\n  },\n  // 页面加载的时候，做一些事情，在created里面\n  mounted() {\n    this.loadGoods();\n    this.load();\n  },\n  // 定义一些页面上控件出发的事件调用的方法\n  methods: {\n    // 计算表格列宽度\n    operationSpace() {\n      let width = 0;\n      let _this = this;\n      setTimeout(() => {\n        let rows = document.getElementsByClassName('el-table__row');\n        if (rows && rows.length) {\n          let tds = rows[0].getElementsByTagName('td');\n          let btns = tds[tds.length - 1].getElementsByTagName('button');\n          for (let i = 0; i < btns.length; i++) {\n            width += btns[i].offsetWidth + 5;\n          }\n          _this.colWidth = width;\n        }\n      }, 0);\n    },\n    // 分页加载表格数据\n    load() {\n      request.post(baseUrl + \"page?pageNum=\" + this.pageNum, this.search).then(res => {\n        if (res.code === '0') {\n          this.tableData = res.data.list;\n          this.total = res.data.total;\n          this.operationSpace();\n        } else {\n          this.$notify.error(res.msg);\n        }\n      });\n    },\n    // 新增初始化对话框\n    add() {\n      this.form = {};\n      this.dialogVisible = true;\n    },\n    // 编辑初始化对话框\n    edit(row) {\n      this.form = JSON.parse(JSON.stringify(row));\n      this.dialogVisible = true;\n    },\n    // 修改信息保存\n    save() {\n      if (!this.form.id) {\n        // 没有ID，说明是新增操作\n        request.post(baseUrl, this.form).then(res => {\n          if (res.code === '0') {\n            this.$notify.success(\"添加成功\");\n            this.dialogVisible = false;\n            this.load();\n          } else {\n            this.$notify.error(res.msg);\n          }\n        });\n      } else {\n        // 有ID，说明是更新操作\n        request.put(baseUrl, this.form).then(res => {\n          if (res.code === '0') {\n            this.$notify.success('更新成功');\n            this.dialogVisible = false;\n            this.load();\n          } else {\n            this.$notify.error(res.msg);\n          }\n        });\n      }\n    },\n    // 根据ID删除某条数据\n    del(id) {\n      request.delete(baseUrl + id).then(res => {\n        if (res.code === '0') {\n          this.$notify.success('删除成功');\n          this.load();\n        } else {\n          this.$notify.error(res.msg);\n        }\n      });\n    },\n    // 商品图片更细\n    jdtpSuccessUpload(res) {\n      this.form.img = res.data;\n    },\n    // 加载商品\n    loadGoods() {\n      request.get(\"/goods\").then(res => {\n        if (res.code === '0') {\n          this.goodsData = res.data;\n        } else {\n          this.$notify.error(res.msg);\n        }\n      });\n    },\n    handleCurrentChange(pageNum) {\n      this.pageNum = pageNum;\n      this.load();\n    }\n  }\n};","map":{"version":3,"names":["request","baseUrl","data","user","tableData","pageNum","dialogVisible","search","form","total","goodsData","mounted","loadGoods","load","methods","operationSpace","width","_this","setTimeout","rows","document","getElementsByClassName","length","tds","getElementsByTagName","btns","i","offsetWidth","colWidth","post","then","res","code","list","$notify","error","msg","add","edit","row","JSON","parse","stringify","save","id","success","put","del","delete","jdtpSuccessUpload","img","get","handleCurrentChange"],"sources":["src/views/manager/Banner.vue"],"sourcesContent":["<!-- 信息管理/前台轮播图管理 -->\n<template>\n  <div>\n    <div>\n      <div class=\"main-body-content\">\n        <!-- 顶部 -->\n        <div class=\"main-body-search\">\n          <div class=\"main-body-header\">前台轮播图管理</div>\n          <el-input size=\"small\" class=\"main-input\" placeholder=\"请输入商品名\" v-model=\"search.goodName\"></el-input>\n\t\t\t\